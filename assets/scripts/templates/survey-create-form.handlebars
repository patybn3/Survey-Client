<form class="create-form form-group">
  <fieldset>
    <legend>Create A Survey</legend>
    <label>Survey Name:</label>
    <input name='survey[name]' class="form-control" type='text' placeholder="name" required>
    <br>
    <label>Question:</label>
    <input name='survey[description]' class="form-control" type='text' placeholder="description" required>
    <br>
    <label>Answer Options:</label>
    <input name='options[option]' class="form-control" type='text' placeholder="Option" required>
    <input name='options[option]' class="form-control last-field" type='text' placeholder="Next Option" required>
    <br>
    <button class="button-add form-control">Add Another Option</button>
    <input type='submit' class="form-control" value='Submit Survey'>
  </fieldset>
</form>
